{
  "name": "10up/figma-block",
  "description": "Add a block to render a Figma file.",
  "type": "wordpress-plugin",
  "license": "GPLv2",
  "authors": [
    {
      "name": "10up",
      "email": "info@10up.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "FigmaBlock\\": "includes/FigmaBlock/"
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "10up/phpcs-composer": "dev-trunk"
  },
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
